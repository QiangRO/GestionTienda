@model IEnumerable<GestionTienda.Models.Articulo>
@{
    ViewData["Title"] = "Lista de artículos";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h3>Lista de artículos</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn btn-primary form-control">Crear artículo</a>
    </div>
</div>


<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>@Html.DisplayNameFor(a => a.Articulo_Id)</th>
                <th>@Html.DisplayNameFor(a => a.TituloArticulo)</th>
                <th>@Html.DisplayNameFor(a => a.Descripcion)</th>
                <th>@Html.DisplayNameFor(a => a.Fecha)</th>
                <th>@Html.DisplayNameFor(a => a.Calificacion)</th>
                <th>@Html.DisplayNameFor(a => a.Categoria)</th> <!--a.Categoria_Id-->
                <th></th>
            </tr>
            @foreach (var articulo in Model)
            {
                <tr>
                    <td>@articulo.Articulo_Id</td>
                    <td>@articulo.TituloArticulo</td>
                    <td>@articulo.Descripcion</td>
                    <td>@articulo.Fecha</td>
                    <td>@articulo.Calificacion</td>
                    <td>@articulo.Categoria.Nombre</td>
                    <td>
                        <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@articulo.Articulo_Id">Editar</a>
                        <a class="btn btn-warning text-white" asp-action="AdministrarEtiqueta" asp-route-id="@articulo.Articulo_Id">Administrar Etiqueta</a>
                        <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@articulo.Articulo_Id"
                    onclick="return confirm('Esta seguro que quiere borrar el articulo?')">Borrar</a>


                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No hay artículos</p>
    }
</div>
